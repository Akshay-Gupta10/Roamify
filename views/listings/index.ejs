<% layout("/layouts/boilerplate")%>
<body>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter{
        text-align: center;
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.7;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .filter p{
        font-size: 0.9rem;
    }

    .filter div a{
        color: inherit;
        text-decoration: none;
    }

    .tax-info{
        display: none;
    }

    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        margin-left: 2rem;
        margin-top: 0.5rem;
        padding: 1rem;
        display: flex;
        align-items: center;
    }

</style>
<div id="filters">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/room">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/city">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic Cities</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/castle">
                <i class="fa-solid fa-chess-rook"></i>
                <p>Castles</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/mountain">
                <i class="fa-solid fa-mountain-sun"></i>
                <p>Mountains</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/pool">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing Pools</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/arctic">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Arctic</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/camping">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/farm">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/dome">
                <i class="fa-solid fa-igloo"></i>
                <p>Domes</p>
            </a>
        </div>
    </div>
    <div class="filter">
        <div>
            <a href="/listings/boat">
                <i class="fa-solid fa-ship"></i>
                <p>Boat</p>
            </a>
        </div>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
<%for(let listing of allListings){%>
    <a href="/listings/<%=listing.id%>" class="listing-link">
    <div class="card col listing-card">
        <img src="<%=listing.image.url%>" class="card-img-top" style="height: 20rem;" alt="listing_image">
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text">
            <b><%=listing.title%></b><br>
            <p>&#8377;<%=listing.price!=null?listing.price.toLocaleString("en-IN"):"N/A"%>/night 
            <i class="tax-info"> 
                + 18% GST
            </i></p>
            </p>
        </div>
    </div>
    </a>
<%}%>
</div>
</body>

<script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display !="inline"){
                info.style.display="inline";
            }
            else{
                info.style.display="none";
            }
        }
    });
</script>